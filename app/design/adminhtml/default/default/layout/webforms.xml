<?xml version="1.0"?>
<layout version="0.1.0">
	<webforms_admin_adminhtml_webforms_index>
		<reference name="content">
			<block type="webforms/adminhtml_webforms" name="webforms" />
		</reference>
	</webforms_admin_adminhtml_webforms_index>
	<webforms_admin_adminhtml_response_edit>
		<update handle="editor"/>
	</webforms_admin_adminhtml_response_edit>
	<webforms_admin_adminhtml_webforms_edit>
		<update handle="editor"/>
	</webforms_admin_adminhtml_webforms_edit>
    <webforms_admin_adminhtml_quickresponse_edit>
        <update handle="editor"/>
    </webforms_admin_adminhtml_quickresponse_edit>
    <webforms_admin_adminhtml_results_edit>
        <update handle="editor"/>
        <reference name="head">
            <action method="addJs">
                <file>webforms/adminhtml/logic.js</file>
            </action>
        </reference>
    </webforms_admin_adminhtml_results_edit>
    <adminhtml_customer_edit>
        <update handle="editor"/>
        <reference name="head">
            <action method="addJs">
                <file>webforms/adminhtml/logic.js</file>
            </action>
        </reference>
    </adminhtml_customer_edit>
	<webforms_admin_adminhtml_results_reply>
		<reference name="head">
			<action method="addCss">
				<stylesheet>webforms/stars.css</stylesheet>
			</action>			
			<action method="addCss">
				<stylesheet>webforms/message.css</stylesheet>
			</action>
		</reference>
		<update handle="editor"/>
	</webforms_admin_adminhtml_results_reply>
	<webforms_admin_adminhtml_results_index>
		<reference name="head">
			<action method="addCss">
				<stylesheet>webforms/stars.css</stylesheet>
			</action>			
			<action method="addCss">
				<stylesheet>webforms/message.css</stylesheet>
			</action>
		</reference>
		<reference name="content">
			<block type="webforms/adminhtml_results" name="results" />
		</reference>
	</webforms_admin_adminhtml_results_index>
    <adminhtml_customer_edit>
        <reference name="head">
            <action method="addJs">
                <file>webforms/adminhtml/result.js</file>
            </action>
            <action method="addCss">
                <stylesheet>webforms/message.css</stylesheet>
            </action>
        </reference>
    </adminhtml_customer_edit>
    <webforms_admin_adminhtml_results_popup>
        <update handle="popup"/>
        <remove name="footer"/>
        <reference name="content">
            <block name="result_popup" type="webforms/adminhtml_results_popup" template="webforms/result/popup.phtml"/>
        </reference>
    </webforms_admin_adminhtml_results_popup>
</layout>